{
  "name": "PROMAN extension",
  "description": "Set timer for your task, blacklist browser/urls during break, Set alarm and make Todos for your tasks, overall enhance your productivity....",
  "version": "0.0.1",
  "manifest_version": 3,

  "background": {
      "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*","http://*/*"] ,
      "css": ["/css/all.min.css"],
      "js": ["/scripts/content/jquery-3.6.0.js"]
    }
  ],

  "permissions": [
      "storage",
      "unlimitedStorage",
      "notifications",
      "alarms", 
      "declarativeNetRequest"
  ],

  "optional_host_permissions" : [
      "*://*/*"
  ],

  "action": {
    "default_popup": "/popup/popup.html",
    "default_icon": {
      "16": "/images/logo5.png",
      "24": "/images/logo4.png",
      "32": "/images/logo3.png",
      "64": "/images/logo2.png",
      "128": "/images/logo1.png"
    }
  },

  "icons": {
    "16": "/images/logo5.png",
    "24": "/images/logo4.png",
    "32": "/images/logo3.png",
    "64": "/images/logo2.png",
    "128": "/images/logo1.png"
  },

  //embedded options page
  "options_ui": {
      "page": "/options/options.html"
    },

  "web_accessible_resources": [{
      "resources": [
          "/options/options.html" ,
          "/options/options.css" ,
          "/css/all.min.css" , 
          "/options/options.js" ,
          "webfonts/*"
      ],
      "matches": [

      ]
  }]
}